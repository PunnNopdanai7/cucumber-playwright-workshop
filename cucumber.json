{
  "default": {
    "dryRun": false,
    "format": [
      "progress-bar",
      ["json", "reports/cucumber-report.json"],
      ["html", "reports/html-formatter.html"]
    ],
    "formatOptions": {
      "snippetInterface": "async-await"
    },
    "parallel": 1,
    "paths": ["src/tests/features/**/*.feature"],
    "require": [
      "src/tests/step_definitions/**/*.ts",
      "src/tests/utils/**/*.ts"
    ],
    "requireModule": ["ts-node/register"]
  }
}
